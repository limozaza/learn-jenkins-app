pipeline {
    agent any

    environment {
        INDEX_HTML = 'build/index.html'
    }


    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

        stage('Test') {
        
            steps {
                sh '''
                    test -f $INDEX_HTML
                    npm test
                '''
            }
        }
        
    }
}